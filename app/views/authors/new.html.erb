<% provide(:title, 'Input New Author') %>
<h1>Input New Author</h1>

<div>
    <%= form_for(@new_author) do |f| %>
        <p>
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
        </p>

        <p>
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
        </p>

        <p>
            <%= f.label :bio %>
            <%= f.text_field :bio %>
        </p>
        <%= f.submit "Submit New Author", class: "btn btn-primary" %>
    <% end %>
</div>
