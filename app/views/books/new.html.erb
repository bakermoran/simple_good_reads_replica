<% provide(:title, 'Input New Book') %>
<h1>Input New Book</h1>

<div>
    <%= form_for(@new_book) do |f| %>
        <p>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </p>

        <p>
            <%= f.label :description %>
            <%= f.text_field :description %>
        </p>

        <p>
            <%= f.label :publisher %>
            <%= f.text_field :publisher %>
        </p>

        <p>
            <%= f.label :year_published %>
            <%= f.text_field :year_published %>
        </p>

        <%= f.select(:author_id, Author.all.collect do |author| [ author.last_name + ', ' + author.first_name, author.id] end, {}, { "data-placeholder": "Select Author" }) %>

        <%= f.submit "Submit New Book", class: "btn btn-primary" %>
    <% end %>
</div>

