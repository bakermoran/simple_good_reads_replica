
<% @books.each do |book| %>
    <h3 class="title"> <%= book.title %> </h3>
    <h4> <% author = Author.find(book.author_id)%> </h4>
    <p class="author"> <%= author.first_name%> <%= author.last_name%> </p>
    <p class="publisher">(<%= book.publisher %>) | <%= book.year_published %></p>
    <p class="description"> <%= book.description %> </p>
    <%= link_to 'See all Reviews', book %>
    <hr>
<% end %>